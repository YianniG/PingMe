{

  "name": "Ping Me",
  "description": "I'll remind you when a website is available. Icon from GLYPHICONS.com.",
  "manifest_version": 2,
  "version": "1.0",
  "homepage_url": "http://pingme.tech",
  "icons": {
    "48": "icons/pingme.png"
  },
  "permissions": [
    "storage", 
    "activeTab", 
    "alarms",
    "notifications",
    "http://*/",
    "https://*/"
  ],

  "background": {
    "scripts": [
      "checker.js"
    ]
  },


  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/pingme.png",
    "default_title": "PingMe"
  }
}
